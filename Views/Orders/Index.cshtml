@model List<ForUpworkRestaurentManagement.ViewModels.OrderViewModel>
@{
    ViewData["Title"] = User.IsInRole("Admin") ? "All Orders" : "My Orders";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item active">@(User.IsInRole("Admin") ? "All Orders" : "My Orders")</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>@ViewData["Title"]</h1>
        @if (!User.IsInRole("Admin"))
        {
            <a asp-controller="Menu" asp-action="Index" class="btn btn-primary">
                <i class="fas fa-plus"></i> New Order
            </a>
        }
    </div>

    @if (Model.Any())
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                @if (User.IsInRole("Admin"))
                                {
                                    <th>Customer</th>
                                }
                                <th>Order Date</th>
                                <th>Items</th>
                                <th>Total Amount</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model)
                            {
                                <tr>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <td>@order.UserName</td>
                                    }
                                    <td>@order.OrderDate.ToString("MMM dd, yyyy h:mm tt")</td>
                                    <td>@order.OrderItems.Sum(oi => oi.Quantity) items</td>
                                    <td>$@order.TotalAmount.ToString("F2")</td>
                                    <td>
                                        @{
                                            var statusClass = order.Status switch
                                            {
                                                "Pending" => "warning",
                                                "Confirmed" => "info",
                                                "Preparing" => "primary",
                                                "ReadyForPickup" => "success",
                                                "Delivered" => "success",
                                                "Cancelled" => "danger",
                                                _ => "secondary"
                                            };
                                        }
                                        <span class="badge bg-@statusClass">@order.Status</span>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-outline-primary">
                                                <i class="fas fa-eye"></i> View
                                            </a>
                                            @if (!User.IsInRole("Admin") && order.Status == "Pending")
                                            {
                                                <form asp-action="Cancel" method="post" class="d-inline">
                                                    <input type="hidden" name="id" value="@order.Id" />
                                                    <button type="submit" class="btn btn-outline-danger">
                                                        <i class="fas fa-times"></i> Cancel
                                                    </button>
                                                </form>
                                            }
                                            @if (User.IsInRole("Admin"))
                                            {
                                                <div class="dropdown">
                                                    <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                                        Update Status
                                                    </button>
                                                    <ul class="dropdown-menu">
                                                        @foreach (var status in Enum.GetValues(typeof(ForUpworkRestaurentManagement.Models.OrderStatus)))
                                                        {
                                                            <li>
                                                                <form asp-action="UpdateStatus" method="post" class="d-inline">
                                                                    <input type="hidden" name="id" value="@order.Id" />
                                                                    <input type="hidden" name="status" value="@status" />
                                                                    <button type="submit" class="dropdown-item">@status</button>
                                                                </form>
                                                            </li>
                                                        }
                                                    </ul>
                                                </div>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-receipt fa-3x text-muted mb-3"></i>
            <h3>No Orders Found</h3>
            <p class="text-muted mb-4">
                @(User.IsInRole("Admin") ?
                            "No orders have been placed yet." :
                            "You haven't placed any orders yet.")
        </p>
        <a asp-controller="Menu" asp-action="Index" class="btn btn-primary btn-lg">
            <i class="fas fa-utensils"></i> Start Ordering
        </a>
    </div>
        }
</div>