@{
    ViewData["Title"] = "About Us";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item active">About Us</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row mb-5">
        <div class="col-lg-6">
            <h1 class="display-4 fw-bold text-primary">About Our Restaurant</h1>
            <p class="lead">Serving delicious meals since 2010</p>
            <p>Welcome to our restaurant, where passion for food meets exceptional service. We take pride in using the freshest ingredients to create memorable dining experiences for our customers.</p>

            <div class="row mt-4">
                <div class="col-md-6">
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-primary text-white rounded-circle p-3 me-3">
                            <i class="fas fa-leaf fa-2x"></i>
                        </div>
                        <div>
                            <h5>Fresh Ingredients</h5>
                            <p class="mb-0 text-muted">Locally sourced</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-success text-white rounded-circle p-3 me-3">
                            <i class="fas fa-cheese fa-2x"></i>
                        </div>
                        <div>
                            <h5>Quality Food</h5>
                            <p class="mb-0 text-muted">Premium quality</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-warning text-white rounded-circle p-3 me-3">
                            <i class="fas fa-shipping-fast fa-2x"></i>
                        </div>
                        <div>
                            <h5>Fast Delivery</h5>
                            <p class="mb-0 text-muted">Quick service</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-info text-white rounded-circle p-3 me-3">
                            <i class="fas fa-users fa-2x"></i>
                        </div>
                        <div>
                            <h5>Expert Team</h5>
                            <p class="mb-0 text-muted">Professional chefs</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <img src="/images/restaurant-about.jpg" alt="Our Restaurant" class="img-fluid rounded shadow">
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-12 text-center">
            <h2 class="mb-4">Why Choose Us?</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card h-100 text-center border-0">
                <div class="card-body">
                    <i class="fas fa-clock fa-3x text-primary mb-3"></i>
                    <h5>Quick Service</h5>
                    <p class="text-muted">We ensure your orders are prepared and delivered promptly without compromising quality.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 text-center border-0">
                <div class="card-body">
                    <i class="fas fa-dollar-sign fa-3x text-success mb-3"></i>
                    <h5>Best Prices</h5>
                    <p class="text-muted">Quality food at affordable prices. We believe good food should be accessible to everyone.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 text-center border-0">
                <div class="card-body">
                    <i class="fas fa-heart fa-3x text-danger mb-3"></i>
                    <h5>Customer Love</h5>
                    <p class="text-muted">Thousands of satisfied customers trust us for their daily meals and special occasions.</p>
                </div>
            </div>
        </div>
    </div>
</div>