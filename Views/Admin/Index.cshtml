@{
    ViewData["Title"] = "Admin Dashboard";
    var recentUsers = ViewBag.RecentUsers as IEnumerable<ForUpworkRestaurentManagement.Models.ApplicationUser>;
    var recentOrders = ViewBag.RecentOrders as IEnumerable<ForUpworkRestaurentManagement.Models.Order>;
}

<div class="container">
    <h2 class="mb-4">Admin Dashboard</h2>

    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">Users</h5>
                    <p class="display-6">@ViewBag.UsersCount</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">Menu Items</h5>
                    <p class="display-6">@ViewBag.ItemsCount</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">Orders</h5>
                    <p class="display-6">@ViewBag.OrdersCount</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">Sales Today</h5>
                    <p class="display-6">$@((decimal)ViewBag.TodaySales).ToString("F2")</p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">Sales (Last 7 Days)</h5>
                    <p class="display-6">$@((decimal)ViewBag.WeekSales).ToString("F2")</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-1">Most Popular Item</h5>
                        <div class="text-muted">@((string)ViewBag.PopularItem ?? "N/A") â€” Qty: @ViewBag.PopularQty</div>
                    </div>
                    <div class="btn-group">
                        <a asp-controller="Menu" asp-action="Manage" class="btn btn-outline-primary">Manage Menu</a>
                        <a asp-controller="Categories" asp-action="Index" class="btn btn-outline-secondary">Categories</a>
                        <a asp-controller="Orders" asp-action="Index" class="btn btn-outline-dark">All Orders</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">Recent Users</div>
                <ul class="list-group list-group-flush">
                    @foreach (var u in recentUsers ?? Enumerable.Empty<ForUpworkRestaurentManagement.Models.ApplicationUser>())
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span>@u.Email</span>
                            <span class="text-muted">@u.UserName</span>
                        </li>
                    }
                </ul>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">Recent Orders</div>
                <ul class="list-group list-group-flush">
                    @foreach (var o in recentOrders ?? Enumerable.Empty<ForUpworkRestaurentManagement.Models.Order>())
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span>#@o.Id by @o.User?.Email</span>
                            <span class="text-muted">@o.OrderDate.ToLocalTime()</span>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>


