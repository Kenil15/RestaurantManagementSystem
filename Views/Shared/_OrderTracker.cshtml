@model ForUpworkRestaurentManagement.ViewModels.OrderViewModel

<div class="order-tracker card mb-4">
    <div class="card-body">
        <div class="tracker-steps d-flex justify-content-between flex-wrap mb-3">
            @{
                var stages = new[] { "Pending", "Confirmed", "Preparing", "ReadyForPickup", "Delivered" };
            }
            @foreach (var s in stages)
            {
                var active = stages.ToList().IndexOf(s) <= stages.ToList().IndexOf(Model.Status);
                <div class="tracker-step @(active ? "active" : "")">
                    <div class="dot"></div>
                    <div class="label">@s</div>
                </div>
            }
        </div>
        <div class="row g-3">
            <div class="col-md-7">
                @if (Model.Status != "Delivered")
                {
                    <div class="map-placeholder">
                        <div class="map-overlay">
                            <i class="fas fa-motorcycle fa-2x"></i>
                            <span>Driver en route (demo)</span>
                        </div>
                    </div>
                }
                else
                {
                    <div class="text-center text-success fw-bold mt-4">
                        <i class="fas fa-check-circle fa-2x mb-2"></i><br />
                        Your order has been delivered successfully ðŸŽ‰
                    </div>
                }
            </div>
            <div class="col-md-5">
                <ul class="list-unstyled small">
                    <li><strong>ETA:</strong> @(Model.Status == "Delivered" ? "Delivered" : "20-35 mins")</li>
                    <li><strong>Driver:</strong> Alex (demo) â€¢ +1 (555) 888-1212</li>
                    <li><strong>From:</strong> Kitchen â€¢ <strong>To:</strong> @Model.DeliveryAddress</li>
                </ul>

                @if (Model.Status == "Pending")
                {
                    <form asp-controller="Orders" asp-action="Cancel" method="post">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <button type="submit" class="btn btn-outline-danger btn-sm">Cancel Order</button>
                    </form>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .tracker-step {
        text-align: center;
        width: 120px;
        position: relative;
        margin-bottom: 8px;
    }

        .tracker-step .dot {
            width: 14px;
            height: 14px;
            border-radius: 50%;
            background: #ced4da;
            margin: 0 auto 6px;
            position: relative;
        }

        .tracker-step.active .dot {
            background: #0d6efd;
            box-shadow: 0 0 0 4px rgba(13,110,253,.15);
        }

        .tracker-step .label {
            font-size: .85rem;
            color: #6c757d;
        }

        .tracker-step.active .label {
            color: #0d6efd;
            font-weight: 600;
        }

    .map-placeholder {
        background: linear-gradient(135deg, #eef2f7, #e2e8f0);
        border-radius: 8px;
        height: 260px;
        position: relative;
        overflow: hidden;
    }

    .map-overlay {
        position: absolute;
        right: 12px;
        bottom: 12px;
        background: rgba(0, 0, 0, .6);
        color: #fff;
        padding: 6px 10px;
        border-radius: 999px;
        display: flex;
        gap: 8px;
        align-items: center;
    }
</style>
