@model IEnumerable<ForUpworkRestaurentManagement.Models.Category>
@{
    ViewData["Title"] = "Manage Categories";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Categories</h2>
    <a asp-action="Create" class="btn btn-primary">New Category</a>
  </div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th style="width:180px">Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var c in Model)
    {
        <tr>
            <td>@c.Name</td>
            <td>@c.Description</td>
            <td>
                <a asp-action="Edit" asp-route-id="@c.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                <a asp-action="Delete" asp-route-id="@c.Id" class="btn btn-sm btn-outline-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>


