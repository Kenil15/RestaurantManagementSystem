@model IEnumerable<ForUpworkRestaurentManagement.Models.Restaurant>
@{
    ViewData["Title"] = "Manage Restaurants";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Restaurants</h2>
    <a asp-action="Create" class="btn btn-primary">New Restaurant</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Address</th>
            <th>Active</th>
            <th style="width: 180px">Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var r in Model)
    {
        <tr>
            <td>@r.Name</td>
            <td>@r.Address</td>
            <td>
                @if (r.IsActive) { <span class="badge bg-success">Yes</span>; } else { <span class="badge bg-secondary">No</span>; }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@r.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                <a asp-action="Delete" asp-route-id="@r.Id" class="btn btn-sm btn-outline-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>


